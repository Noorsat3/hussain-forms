                        <div class="row">
                            <div class="col-25">
                                <label>رقم الموظف</label>
                            </div>
                            <div class="col-75">
                                <input type="text" name="empNo" placeholder="0221558" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label>الإدارة</label>
                            </div>
                            <div class="col-75">
                                <input type="text" name="empAdmini" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label>الـقــســــم</label>
                            </div>
                            <div class="col-75">
