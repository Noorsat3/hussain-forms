<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/login.css">

    </head>

    <body>
        <%- include('../includes/nav.ejs') %>
            <main>
                <form action="/home" method="post">
                    <div class="imgcontainer">
                        <img src="/img/app_logo.png" width="260" height="260" class="avatar">
                    </div>
                    <% if (errorMessage) { %>
                        <div style="text-align: center; color: red; font-weight: 600;">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                            <% if (deletedUser) { %>
                                <div style="text-align: center; color: red; font-weight: 600;">
                                    <%= deletedUser %>
                                </div>
                                <% } %>
                                    <div class="container">
                                        <div class="form-control">
                                            <label for="username"><b>اسم الموظف</b></label>
                                            <input type="text" placeholder="احمد" name="username" required>
                                        </div>

                                        <div class="form-control">
                                            <label for="password"><b>كلمة المرور</b></label>
                                            <input type="password" placeholder="********" name="password" required>
                                        </div>

                                        <button type="submit">تسجيل الدخول</button>
                                    </div>
                </form>
            </main>
    </body>

    </html>